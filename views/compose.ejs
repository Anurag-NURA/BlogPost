<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label for="inputdefault">Title</label>
    <input
      class="form-control"
      id="inputdefault"
      type="text"
      name="composeText"
      autocomplete="off"
    />

    <label for="inputdefault">Post</label>
    <textarea
      class="form-control"
      id="textAreaExample"
      name="composePost"
      rows="4"
    ></textarea>
  </div>

  <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>
